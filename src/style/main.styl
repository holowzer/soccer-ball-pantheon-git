    width 100%
    height 100%
    position absolute
    top 0
    opacity 1
    transform translateY(0)
    display flex
    justify-content center
    flex-direction column
    transition all 0.3s ease
    align-items center
    left 0
    background black
    z-index 1000
    h2
        font-size 5em 
        text-align center
        font-size 72px;
