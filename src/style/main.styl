@font-face 
  font-family "Voyage"    
  src url("./fonts/Voyage Regular.otf")
@font-face 
  font-family "manrope"    
  src url("./fonts/Manrope-Regular.ttf")

.experienceStarter
    border-radius 1000px
    border  rgba(15,70,0,1) 2px solid 
    transition all 0.2s ease-out
    background #000
    display flex
    justify-content center  
    align-items center
    color white
    width 120px
    height 120px
    position absolute
    font-size 12px
    right 60px
    cursor pointer
    bottom 60px
     .experienceStarterhover
         border  #65c94b 2px solid 




html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden

 body
        width 100vw
        height 100vh
        font-family "Voyage"
        padding 0
        margin 0
        .loadingScreen
            background black
            z-index  600
            position absolute
            transform translateY(0)
            width 100%
            height 100%
            // display none if you want to work directly on the 3D scene ;)
            // 
            // 
            display none
            justify-content center
            align-items center
            flex-direction column
            h1
                color white
                letter-spacing 10px
                margin 0
                font-family "Voyage"

            .fakeLoaderContainer
                display flex
                justify-content center  
                align-items center
                height 90px
                .fakeLoaderWhite
                    width 300px
                    overflow hidden
                    height 3px
                    background #cccccc
                    .yellowFiller
                        background rgba(15,70,0,0.6)
                        width 300px
                        height 3px
                        transform translateX(-300px)



    .globalWindow
        background #000 
        // display none if you want to work directly on the 3D scene ;)
        // 
        // 
        display none
        width 100%
        position relative
        z-index 500
        height 100%
        nav 
            display flex
            justify-content flex-start
            align-items center
            color white
            position fixed
            padding-left 30px
            letter-spacing 10px
            font-weight lighter
        .radialSun 
                position absolute
                z-index 501
                border-radius 500px
                top 130px
                left 50%
                margin-left -300px
                width 600px
                height 600px
                opacity 0.9
                background radial-gradient(circle, rgba(15,70,0,0.6) 0%, rgba(255,151,24,0) 56%, rgba(255,127,0,0) 100%)
        .beforeExperienceSas
            display flex
            width 100%
            height 100%
            position relative
            overflow hidden
            justify-content center
            opacity 0
            flex-direction column
            perspective 600px
            align-items center

            h2
                font-size 120px
                z-index 5
                position relative
                pointer-events none
                font-weight lighter
                color white
                line-height 110px
                width 1100px
                text-align center
                text-transform uppercase
                letter-spacing 10px
            h4
                color white
                width 730px
                font-size 16px
                margin-top -30px
                letter-spacing 2px
                text-align center
