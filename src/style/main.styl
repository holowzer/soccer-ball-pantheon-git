 .textPlaceHolder 
    color #fff
    width 100%
    height 100%
    font-size 1em
    opacity 0
    transition opacity 0.6s ease
    pointer-events none
    position absolute
    z-index 31
    top 0 
    left 0
    display flex
    .exitButton
        border-radius 1000px;
        border #0f4600 2px solid;
        transition all 0.2s ease-out;
        background transparent; 
        display flex;
        justify-content center;
        z-index 10001
        align-items center;
        color #fff;
        width 120px;
        top 28px;
        height 120px;
        position absolute;
        font-size 12px;
        right 30px;
        cursor pointer;

    .leftInfo
        left 10px
        bottom -30px
        position absolute
        text-align center
        width 400px
        font-size 2.7em
    .rightInfo
        position absolute
        right 30px
        bottom  50px
        width 400px

    p
        text-transform capitalize
        font-family "manrope"
        letter-spacing 2px
    h2
        text-transform uppercase
        letter-spacing 10px
        font-size 2em
    


