@font-face 
  font-family "Voyage"    
  src url("./fonts/Voyage Regular.otf")
            
 body
        width 100vw
        height 100vh
        font-family "Voyage"
        padding 0
        margin 0
        .loadingScreen
            background black
            z-index  2
            position absolute
            transform: translateY(0)
            width 100%
            height 100%
            display flex
            justify-content: center
            align-items center
            flex-direction column
            h1
                color: white
                letter-spacing 10px
                margin 0
                font-family "Voyage"

            .fakeLoaderContainer
                display flex
                justify-content center  
                align-items center
                height 90px
                .fakeLoaderWhite
                    width 300px
                    overflow hidden
                    height 3px
                    background #cccccc
                    .yellowFiller
                        background #ff7300
                        width 300px
                        height 3px
                        transform translateX(-300px)



    .globalWindow
        background #000 
        width 100%

        height 100%
        nav 
            display: none
        .radialSun 
                position absolute
                z-index: 1
                border-radius: 500px
                top: 130px
                left 50%
                margin-left: -300px
                width 600px
                height 600px
                opacity 0.9
                background: radial-gradient(circle, rgba(255,115,0,0.643207624846813) 0%, rgba(255,151,24,0) 56%, rgba(255,127,0,0) 100%);
        .beforeExperienceSas
            display flex
            width 100%
            height 100%
            position relative
            overflow hidden
            justify-content center
            opacity 0
            flex-direction: column
            perspective: 800px
            align-items center
            h2
                font-size: 120px
                mix-blend-mode: multiply
                font-weight: lighter
                color: white
                line-height: 110px
                width 1100px
                text-align: center
                text-transform: uppercase
                letter-spacing: 10px
            h4
                color white
                width 700px
                font-size 20px
                margin-top -30px
                text-align center
            